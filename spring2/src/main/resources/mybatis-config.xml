<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
    <configuration>

    <settings>
    <!-- 테이블 컬럼 이름의 밑줄(underscore)를 자바클래스의 카멜 표기법 필드로 자동 변환해주는 설정 -->
        <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings>
    
    <!--  mapper.xml 파일에서 resultType속성을 설정할때 간단히 하기위해서 설정함. -->
    <typeAliases>
        <typeAlias type="com.itwill.spring2.repository.Post" alias="Post" />
        <typeAlias type="com.itwill.spring2.repository.Comment" alias="Comment" />
        <typeAlias type="com.itwill.spring2.repository.User" alias="User" />
    </typeAliases>

</configuration>